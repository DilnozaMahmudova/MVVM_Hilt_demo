<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.screens.FullItem">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/bg"/>

    <ImageView
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:src="@drawable/ful"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
<TextView
    style="@style/Title"
    android:text="Task name"
    android:textColor="#040C42"
    android:textSize="35sp"
    app:layout_constraintTop_toBottomOf="@id/top"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:id="@+id/taskName"/>
    <TextView
       style="@style/HashTag"
        android:text="hashtag"
        android:textSize="20sp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@id/taskName"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="#027C88"
        android:id="@+id/hashTag"/>

    <TextView
        android:id="@+id/taskInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="85dp"
        android:paddingLeft="20dp"
        android:gravity="center"
        android:paddingRight="20dp"
        android:text="Infhjgvschgsvsbso"
        android:textColor="#CC000000"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/dead"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hashTag" />

    <TextView
        android:id="@+id/deadline"
        style="@style/Deadline"
        android:text="11-02-2021"
        android:textColor="#680606"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/dead" />

    <TextView
        android:id="@+id/dead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Deadline:"
        android:textColor="#CC000000"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/deadline" />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/home"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_baseline_reply_all_24"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>